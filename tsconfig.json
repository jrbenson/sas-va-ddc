{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/tests/*"
  ]
}